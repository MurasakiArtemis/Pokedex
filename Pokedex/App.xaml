<Application
    x:Class="Pokedex.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Pokedex"
    RequestedTheme="Light"
    xmlns:converters="using:Pokedex.View.Converters">

    <Application.Resources>
        <ResourceDictionary>
            <x:String x:Key="BulbapediaApiBaseUrl">http://bulbapedia.bulbagarden.net/w/</x:String>
            <x:String x:Key="BulbapediaBaseUrl">http://bulbapedia.bulbagarden.net/wiki/</x:String>
            <converters:TypeColorConverter x:Key="TypeColorConverter"/>
            <converters:StringImageSourceConverter x:Key="StringImageSourceConverter"/>
            <converters:StringFormatter x:Key="StringFormatter"/>
            <converters:AbilitySlotVisibilityConverter x:Key="AbilitySlotVisibilityConverter"/>
            <converters:StringVisibilityConverter x:Key="StringVisibilityConverter"/>
            <converters:BooleanVisibilityConverter x:Key="BooleanVisibilityConverter"/>
            <converters:FrameStringConverter x:Key="FrameStringConverter"/>
            <converters:DoubleBrushConverter x:Key="DoubleBrushConverter"/>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="View/Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
    
</Application>
